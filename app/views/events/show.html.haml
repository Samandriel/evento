%p#notice= notice
%p
  %strong Title:
  = @event.title
%p
  %strong Start date:
  = @event.start_date.strftime("%d %B %Y")
%p
  %strong End date:
  = @event.end_date.strftime("%d %B %Y")
%p
  %strong Location:
  = @event.location
%p
  %strong Agenda:
  = @event.agenda
%p
  %strong Address:
  = @event.address
%p
  %strong Organizer:
  = @event_owner.email
%p
  %strong Tags:
  =raw @event.tag_list.map {|t| link_to t, tag_path(t)}.join(', ')

